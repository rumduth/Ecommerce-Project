doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        title Product Not Exist
        style.
            body {
                font-family: Arial, sans-serif;
                margin: 0;
                padding: 0;
                background-color: #f4f4f4;
                color: #333;
                text-align: center;
            }
            .container {
                max-width: 600px;
                margin: 100px auto;
                padding: 20px;
                background: white;
                border-radius: 8px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }
            a {
                display: inline-block;
                margin-top: 20px;
                color: #007BFF;
                text-decoration: none;
            }
            a:hover {
                text-decoration: underline;
            }
    body
        nav
            ul
                li: a(href="/") Home
        .container
            .error-content
                h1 Page Not Found
                p The page you are looking for does not exist or has been removed.
                a(href="/") Go back to Home
